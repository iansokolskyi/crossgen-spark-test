{
    "name": "spark-daemon",
    "version": "0.1.0",
    "description": "Spark Assistant Daemon - Intelligence layer for Obsidian Spark",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "spark": "./dist/cli.js"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "obsidian",
        "ai",
        "automation",
        "claude",
        "daemon"
    ],
    "author": "Spark Team",
    "license": "MIT",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.30.0",
        "chokidar": "^4.0.1",
        "commander": "^12.1.0",
        "fast-glob": "^3.3.2",
        "glob": "^11.0.0",
        "gray-matter": "^4.0.3",
        "minimatch": "^10.0.1",
        "yaml": "^2.6.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^9.17.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}